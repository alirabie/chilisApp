<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activites.Categories"
    android:orientation="vertical"
    android:background="@drawable/bg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context=".Activites.Categories"
        android:orientation="horizontal"
        android:background="#ee3224">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="الطلبـــات"
            android:id="@+id/textView2"
            android:gravity="center"
            android:padding="5dp"
            android:layout_weight="10"
            android:textStyle="bold"
            android:textColor="#e7e7e7"
            android:textSize="55dp" />

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="35dp">

        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:padding="25dp"
            android:id="@+id/Itemlist"
            android:background="@drawable/shabebar">


        </android.support.v7.widget.RecyclerView>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="يضاف خدمة  12% للحساب"
        android:id="@+id/textView4"
        android:gravity="center"
        android:padding="25dp"
        android:textStyle="bold"
        android:textSize="30dp"
        android:textColor="#f0f0f0" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:background="@drawable/shabebar"
        android:padding="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="ج.م "
            android:layout_weight="1"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="#ee3224"
            android:textSize="35dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="100 "
            android:layout_weight="1"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="#ee3224"
            android:textSize="35dp"
            android:id="@+id/pricetxt" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="المجموع : "
            android:id="@+id/textView6"
            android:layout_weight="1"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="#ee3224"
            android:textSize="35dp" />

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:background="#ee3224"
        android:id="@+id/Orders"
        android:padding="15dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="أطلب الان"
            android:id="@+id/textView3"
            android:gravity="center"
            android:padding="10dp"
            android:textSize="40dp"
            android:textColor="#f2f2f2" />
    </LinearLayout>

</LinearLayout>
